<div id="main-container" class="d-flex flex-row flex-wrap justify-content-center align-items-start mb-5 mt-5">
    <div id="back-button-div" style="height: 5px;">
      <%= link_to users_path do %>
        <i class="fas fa-angle-left fa-2x"></i>
      <% end %>
    </div>
    <div class="d-flex flex-column">
<div id="main-container" class="d-flex flex-column flex-wrap justify-content-center align-items-between">
  <div class="profile d-flex flex-row align-items-center justify-content-between mt-3">
      <%=cl_image_tag(@user.photo.key) %>
      <%= render "users/user_fr_status" %>
    </div>
      <div class="user-info d-flex flex-column">
      <h5><strong><%= @user.first_name %> <%= @user.last_name %></strong></h5>
      <p><small><em>lives in</em>: <%= @user.city %></small></p>
      "<%= @user.bio %>"
    </div>
   </div>
  </div>
<hr>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <% if @user == current_user && @user.pets.empty? %>
      <div class="card-pet d-flex flex-row align-items-start justify-content-start mb-3">
        <h6 class="mb-0">Add your first pet!</h6>
      </div>
    <% else %>
    <h6 class="label"><strong><%= @user.first_name %>'s Pet(s)</strong></h6>
    <div class="profile-pet d-flex justify-content-around">
      <%= render "pets/pets" %>
    <% end %>
    </div>
    <% if @user == current_user %>
      <%= link_to new_pet_path do %>
        <div class="btn btn-flat">Add Your Pet</div>
      <% end %>
    <% end %>
  </div>
</div>
