<div id="back-button-div" style="height: 5px;">
  <%= link_to users_path do %>
    <i class="fas fa-angle-left fa-2x"></i>
  <% end %>
</div>
  <div class="d-flex justify-content-center mb-5">
    <div id="main-container" class="d-flex flex-row flex-wrap justify-content-center align-items-center mb-5 mt-5">
      <div class="d-flex flex-column">
        <div id ="some-div" class="d-flex flex-column flex-wrap justify-content-center align-items-between">
          <div class="profile d-flex flex-row align-items-center justify-content-between m-3">
            <%=cl_image_tag(@user.photo.key) %>
            <%= render "pet_sittings/user_pet_sitting" %>
          <div id="buttons" class="d-flex flex-row align-items-center"></div>
            <%= render "users/user_fr_status" %>
          </div>
          <div class="user-info-show d-flex flex-column ml-3 text-left">
            <div class="pl-3">
            <h5><strong><%= @user.first_name %> <%= @user.last_name %></strong></h5>
            <p><small><em> <i class="fas fa-map-marker-alt pr-1"></i></em> <%= @user.city %></small></p>
          </div>
          <div class="user-bio-show text-left p-3">
        <%= @user.bio %>
      </div>
      <%= render "pet_sittings/user_pet_sitter" %>
    </div>
   </div>
  </div>
<hr>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <%= render "pets/pets_card" %>
  </div>
</div>
</div>
