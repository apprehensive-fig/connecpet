    <div id="back-button-div">
      <%= link_to users_path do %>
        <i class="fas fa-angle-left"></i>
      <% end %>
    </div>
<div id="main-container" class="d-flex flex-row flex-wrap justify-content-center align-items-start mb-5 mt-5">
  <div class="profile d-flex flex-column align-items-center justify-content-start mb-3 mr-5">
      <%=cl_image_tag(@user.photo.key) %>
      <h5><strong><%= @user.first_name %> <%= @user.last_name %></strong></h5>
      <p><small><em>lives in</em>: <%= @user.city %></small></p>
      "<%= @user.bio %>"
    </div>
    <!--booking status-->
    <% if @user == current_user && @user.bookings.any? %>
      <div class="booking-status">
        <h6>Your bookings with pet sitters:</h6>
        <% @user.bookings.each do |booking| %>
          <p>Booked <%= booking.pet_sitting.user.first_name %>, for
            <%= booking.start_date %> -
            <%= booking.end_date %></p>
        <% end %>
      </div>
    <% end %>
    <%= render "users/user_fr_status" %>
  </div>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <% if @user == current_user && @user.pets.empty? %>
      <div class="card-pet d-flex flex-row align-items-start justify-content-start mb-3">
        <h6 class="mb-0">Add your first pet!</h6>
      </div>
    <% else %>
      <h6 class="label"><strong><%= @user.first_name %>'s Pet(s)</strong></h6>
      <%= render "pets/pets" %>
    <% end %>
    <% if @user == current_user %>
      <%= link_to new_pet_path do %>
        <div class="btn btn-flat">Add Your Pet</div>
      <% end %>
    <% end %>
  </div>
</div>
