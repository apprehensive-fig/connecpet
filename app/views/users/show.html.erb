<div id="back-button-div" style="height: 5px;">
  <%= link_to users_path do %>
    <i class="fas fa-angle-left fa-2x"></i>
  <% end %>
</div>
  <div class="d-flex justify-content-center mb-5">
    <div id="main-container" class="d-flex flex-row flex-wrap justify-content-center align-items-center mb-5 mt-5">
      <div class="d-flex flex-column">
        <div id ="some-div" class="d-flex flex-column flex-wrap justify-content-center align-items-between">
          <div class="profile d-flex flex-row align-items-center justify-content-between m-3">
            <%=cl_image_tag(@user.photo.key) %>
              <% if @user.pet_sitter? %>
             <%= image_tag "https://res.cloudinary.com/dzwpbkn3u/image/upload/v1623309469/a_jzel9g.png", alt: "petsitter", id: "badge-ps" %>
            <% end %>
            <%= render "users/user_fr_status" %>
          </div>
          <div class="user-info-show d-flex flex-column ml-3">
            <div class="pl-3">
            <h5><strong><%= @user.first_name %> <%= @user.last_name %></strong></h5>
            <p><small><em> <i class="fas fa-map-marker-alt pr-1"></i></em> <%= @user.city %></small></p>
          </div>
          <div class="user-bio text-left p-3">
        <%= @user.bio %>
      </div>
      <% if @user.pet_sitter? %>
      <%= link_to pet_sitting_path do %>
        <p>See <%= @user.first_name %>' Petsitting Profile</p>
        <% end %>
      <% end %>
    </div>
   </div>
  </div>
<hr>
  <div class="d-flex flex-column justify-content-center align-items-center">
    <% if @user == current_user && @user.pets.empty? %>
      <div class="card-pet flex-column align-items-start justify-content-center mb-3">
        <h6 class="mb-0">Add your first pet!</h6>
      </div>
    <% else %>
    <h6 class="label"><strong><%= @user.first_name %>'s Pet(s)</strong></h6>
    <div class="profile-pet d-flex flex-column justify-content-around">
      <%= render "pets/pets" %>
    <% end %>
    </div>
    <% if @user == current_user %>
      <%= link_to new_pet_path do %>
        <div class="btn btn-flat">Add Your Pet</div>
        <% end %>
    <% end %>
  </div>
</div>
</div>
