<div id="main" class="d-flex flex-row justify-content-center align-items-around flex-wrap pt-5 pb-5">
  <div class="card-user d-flex flex-column align-items-center justify-content-start">
      <%= cl_image_tag(@user.photo.key) %>
    <div class="user-info d-flex flex-column justify-content-center text-center ml-3 mr-3">
      <p><%= @user.first_name %> <%= @user.last_name %></p>
      <%= @user.city %>
      <%= @user.bio %>
    </div>
  </div>
  <div class="card-pet d-flex flex-row align-items-center justify-content-center">
    <%= render "pets/pets" %>
  </div>
</div>
