<%= simple_form_for [pet_sitting, booking], :html => { class: "booking-form-container" } do |f| %>
  <%= f.input :start_date, label: 'From', html5: true, :input_html => { min: Date.today, class: "petsitting-booking-form" } %>
  <%= f.input :end_date, label: 'Until', html5: true, :input_html => { min: Date.today, class: "petsitting-booking-form" } %>
  <%= f.input :description, label: 'Comments', inline_label: 'description', :input_html => { class: "petsitting-booking-form" } %>
  <%= f.submit class: 'btn btn-info mb-3 mt-3', value: "Book" %>
<% end %>
