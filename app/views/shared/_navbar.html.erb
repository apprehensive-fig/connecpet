<div class="bg-w navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="w-100"></div>
  <%= link_to "/", class: "navbar-brand d-flex justify-content-center" do %>
    <%= image_tag "https://res.cloudinary.com/dzwpbkn3u/image/upload/v1622550543/logo_qobxhf.png" %>
    <% end %>

  <div class="collapse navbar-collapse d-flex justify-content-end align-items-end" id="navbarSupportedContent">
    <ul class="navbar-nav d-flex flex-row">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to users_path do %>
          <i class="fas fa-home nav-link"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to friends_path do %>
          <i class="fas fa-user nav-link"></i>
          <% end %>
        </li>
         <li class="nav-item dropdown m-0">
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://res.cloudinary.com/dzwpbkn3u/image/upload/v1622623343/cat_in_pink_p23lrb.png", style="width: 30px; height: 30px;"/>
          <div class="dropdown-menu dropdown-menu-right text-center p-0" aria-labelledby="navbarDropdown">
          <p>signed in as <%= current_user.email %>
          <a class="dropdown-item"> <%= link_to "Your Profile", user_path(current_user), class: "nav-link" %></a>
          <a class="dropdown-item"> <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link" %></a>
        </div>
      </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
