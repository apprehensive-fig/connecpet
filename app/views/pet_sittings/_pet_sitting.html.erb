<div class="card-petsittings">
  <%= link_to pet_sitting_path(pet_sitting), class: "link" do %>
    <%= pet_sitting.photo.attached? ? cl_image_tag(pet_sitting.photo.key, class: "card-user-avatar") : cl_image_tag("https://cdn5.vectorstock.com/i/1000x1000/82/59/anonymous-user-flat-icon-vector-18958259.jpg", class: "card-user-avatar") %>
    <div class="card-petsittings-infos">
      <div>
        <h2><%= pet_sitting.user.first_name %> <%= pet_sitting.user.last_name %></h2>
        <p><%= pet_sitting.user.city %></p>
      </div>
      <h2 class="card-petsittings-pricing"><%= pet_sitting.price %>yen per night</h2>
      <%= pet_sitting.user.photo.attached? ? cl_image_tag(pet_sitting.user.photo.key, class: "card-user-avatar") : cl_image_tag("https://cdn5.vectorstock.com/i/1000x1000/82/59/anonymous-user-flat-icon-vector-18958259.jpg", class: "card-user-avatar") %>
    </div>
  </div>
<% end %>
